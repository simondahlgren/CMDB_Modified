            </a>
            <p>@Html.DisplayFor(model => model.TopMovieList[0].Metascore)/100</p>


            <a asp-action="GetMovie" asp-controller="Movie" asp-route-id="@Model.TopMovieList[0].ImdbID.ToString()" method="get">

                <img class="rating" src="~/Images/logo.png" alt="CMDB-logo">
            </a>
            <p>Likes @Html.DisplayFor(model => model.TopMovieList[0].NumberOfLikes)</p>
            <p>Dislikes @Html.DisplayFor(model => model.TopMovieList[0].NumberOfDislikes)</p>
        </div>
        <div class="flex">
            <h2>Plot</h2>
            <p id="color">@Html.DisplayFor(model => model.FirstHalfPlot)<span id="dots">...</span><span id="more">@Html.DisplayFor(model => model.SecondHalfPlot) </span></p>
