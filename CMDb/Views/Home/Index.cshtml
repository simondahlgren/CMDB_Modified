                <img class="rating" href="" src="@Html.DisplayFor(model => model.TopMovieList[0].Poster)" alt="Top1">

            </a>
        </div>
        <div class="flex2">
            <a href="https://www.imdb.com/title/@(Model.TopMovieList[0].ImdbID)" target="_blank">
                <img class="rating" src="~/Images/imdb.png" alt="IMDB-logo">
            </a>
            <p>@Html.DisplayFor(model => model.TopMovieList[0].ImdbRating)/10</p>

            <a href="https://www.metacritic.com/movie/@(Model.TopMovieList[0].Title.Replace(" ", "-").Replace(":", "").Replace("é","e").ToLower())" target="_blank">
